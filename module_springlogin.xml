      <bootclasspath refid="springlogin.module.bootclasspath"/>
      <classpath refid="springlogin.module.production.classpath"/>
      <src refid="springlogin.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.springlogin"/>
    </javac>
    
    <copy todir="${springlogin.output.dir}">
      <fileset dir="${module.springlogin.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.springlogin.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.springlogin.basedir}/src/main/webapp">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.springlogin.tests" depends="compile.module.springlogin.production" description="compile module springLogin; test classes" unless="skip.tests">
