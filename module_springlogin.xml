    </javac>
    
    <copy todir="${springlogin.testoutput.dir}">
      <fileset dir="${module.springlogin.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
