  <target name="compile.module.springlogin" depends="compile.module.springlogin.production,compile.module.springlogin.tests" description="Compile module springLogin"/>
  
  <target name="compile.module.springlogin.production" description="Compile module springLogin; production classes">
    <mkdir dir="${springlogin.output.dir}"/>
    <javac destdir="${springlogin.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.springlogin}/javac">
